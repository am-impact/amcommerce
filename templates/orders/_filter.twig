{% extends "_layouts/cp" %}

{% import "_includes/forms" as forms %}

{% set title = 'Orders'|t %}
{% set pluginTitle = craft.amCommerce.name %}

{% set crumbs = [
    { label: pluginTitle, url: url('amcommerce') },
    { label: title, url: '#' }
] %}

{% set elementTypeClass = 'AmCommerce_Order' %}
{% set elementType = craft.elements.getElementType(elementTypeClass) %}
{% set context = 'index' %}

{% if not elementType %}
    {% exit 404 %}
{% endif %}

{% block main %}
    <div class="grid first">
        <div class="item first" data-position="left" data-min-colspan="1" data-max-colspan="3">
            <div class="pane">
                <h1>{{ 'Filter' }}</h1>
                {% include 'amcommerce/_includes/orders/fieldsFilter' %}
            </div>
        </div>
        <div class="item" data-position="right" data-colspan="2">
            <div class="pane">
                <h1>{{ 'Orders Overview' }}</h1>
                {% include 'amcommerce/_includes/orders/overview' %}
            </div>
        </div>
    </div>
{% endblock %}